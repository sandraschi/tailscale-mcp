{
  "dashboard": {
    "id": null,
    "title": "Tailscale Network Overview",
    "tags": ["tailscale", "network", "devices"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Network Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"tailscale-mcp\"}",
            "legendFormat": "Server Status"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Total Devices",
        "type": "stat",
        "targets": [
          {
            "expr": "tailscale_devices_total",
            "legendFormat": "Total Devices"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Online Devices",
        "type": "stat",
        "targets": [
          {
            "expr": "tailscale_devices_online_total",
            "legendFormat": "Online Devices"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Offline Devices",
        "type": "stat",
        "targets": [
          {
            "expr": "tailscale_devices_offline_total",
            "legendFormat": "Offline Devices"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Network Traffic (Bytes/sec)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(tailscale_network_bytes_sent_total[5m])",
            "legendFormat": "Bytes Sent/sec"
          },
          {
            "expr": "rate(tailscale_network_bytes_received_total[5m])",
            "legendFormat": "Bytes Received/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {
            "label": "Bytes/sec",
            "unit": "bytes"
          }
        ]
      },
      {
        "id": 6,
        "title": "Device Connectivity Status",
        "type": "table",
        "targets": [
          {
            "expr": "tailscale_device_info",
            "legendFormat": "Device Info",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "instance": true,
                "job": true
              },
              "indexByName": {},
              "renameByName": {
                "device_id": "Device ID",
                "device_name": "Device Name",
                "status": "Status",
                "last_seen": "Last Seen",
                "ip_address": "IP Address"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(tailscale_api_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "yAxes": [
          {
            "label": "Requests/sec",
            "unit": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "API Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(tailscale_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(tailscale_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(tailscale_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "yAxes": [
          {
            "label": "Response Time",
            "unit": "s"
          }
        ]
      },
      {
        "id": 9,
        "title": "Error Rate by Status Code",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(tailscale_api_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Errors"
          },
          {
            "expr": "rate(tailscale_api_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Errors"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "yAxes": [
          {
            "label": "Errors/sec",
            "unit": "short"
          }
        ]
      },
      {
        "id": 10,
        "title": "Device Activity Timeline",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(tailscale_device_activity_total[5m])",
            "legendFormat": "{{device_name}} - {{activity_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "yAxes": [
          {
            "label": "Activity/sec",
            "unit": "short"
          }
        ]
      }
    ],
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}
