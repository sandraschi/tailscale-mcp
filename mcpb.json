{
  "name": "tailscale-mcp",
  "version": "2.0.0",
  "description": "Comprehensive Tailscale MCP server with portmanteau tools",
  "author": "Sandra Schi",
  "license": "MIT",
  "outputDir": "dist",
  "mcp": {
    "version": "2.12.0",
    "server": {
      "command": "python",
      "args": ["-m", "tailscalemcp"],
      "transport": "stdio"
    },
    "capabilities": {
      "tools": true,
      "resources": true,
      "prompts": true
    }
  },
  "dependencies": {
    "python": ">=3.10.0"
  }
}
